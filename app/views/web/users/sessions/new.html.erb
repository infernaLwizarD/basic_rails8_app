<div class="login-box">

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Вход в систему</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <% if notice %>
          <div class="alert alert-danger alert-dismissible">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger alert-dismissible">
            <%= alert %>
          </div>
        <% end %>

        <div class="input-group mb-3">
          <div class="input-group-text">
            <span class="fas fa-user"></span>
          </div>
          <%= f.text_field :login, autofocus: true, autocomplete: 'login', class: 'form-control form-control-sm',
                           placeholder: "Логин", required: true %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control form-control-sm',
                               placeholder: 'Пароль', required: true %>
        </div>

        <div class="row">
          <div class="col-8">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, 'Запомнить меня', class: 'form-check-label font-weight-normal' %>
              </div>
            <% end %>
          </div>
          <div class="col-4">
            <div class="d-grid gap-2">
              <%= f.submit 'Войти', class: 'btn btn-primary fs-7' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <%= render "web/users/shared/links" %>
    </div>
  </div>

</div>
<div>
  <h1>Пользователи</h1>
  <% if policy(User).create? %>
    <div><%= link_to('Добавить', new_user_path(), data: {turbo: false}) %></div>
  <% end %>
  <table id="users-table">
    <thead>
    <tr>
      <th style="width:10px;">ID</th>
      <th>Имя пользователя</th>
      <th>E-mail</th>
      <th>Роль</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user, data: { turbo: false } %></td>
        <td><%= link_to user.username, user, data: { turbo: false } %></td>
        <td><%= link_to user.email, user, data: { turbo: false } %></td>
        <td><%= link_to user.user_role_label, user, data: { turbo: false } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<div class="row">
  <div class="col-md-12">

    <div class="card">
      <div class="card-header accent-purple">
        <div class="row">
          <div class="col-md-11">
            <div class="row">
              <% if policy(User).create? %>
                <div class="col-md-auto"><%= draw_new_button(path: new_user_path(), button: true) %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="card-body p-0" style="max-height:700px;overflow:auto;">
        <table id="users-table" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th style="width:10px;">ID</th>
            <th>Имя пользователя</th>
            <th>E-mail</th>
            <th>Роль</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <%
              td_class = if user.locked_at?
                           ' class=bg-warning'
                         elsif user.discarded?
                           ' class=bg-danger'
                         end
            %>
            <tr>
              <td<%= td_class %>><%= ts_link_to(user.id, user) %></td>
              <td<%= td_class %>><%= ts_link_to(user.username, user) %></td>
              <td<%= td_class %>><%= ts_link_to(user.email, user) %></td>
              <td<%= td_class %>><%= ts_link_to(user.user_role_label, user) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

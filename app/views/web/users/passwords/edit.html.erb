<div class="login-box">

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Изменение пароля</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "web/users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-group mb-3">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm",
                               placeholder: "Новый пароль", required: true %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm",
                               placeholder: "Повторите пароль", required: true %>
        </div>

        <div class="row">
          <div class="col-12 text-end">
            <%= f.submit 'Изменить пароль', class: 'btn btn-primary fs-7' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <%= render "web/users/shared/links" %>
    </div>
  </div>

</div>